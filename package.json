{
  "name": "dark_backpage",
  "version": "1.3.2",
  "description": "DarkBot backpage",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "build": "electron-builder --publish always"
  },
  "devDependencies": {
    "electron": "11.5.0",
    "electron-builder": "^23.6.0"
  },
  "build": {
    "appId": "eu.darkbot.backpage",
    "productName": "dark_backpage",
    "artifactName": "backpage-${os}-${arch}.${ext}",
    "asar": true,
    "npmRebuild": true,
    "buildDependenciesFromSource": false,
    "directories": {
      "buildResources": "res"
    },
    "mac": {
      "target": "zip",
      "extraResources": [
        "./res/icon.icns",
        "./res/flash.plugin/**"
      ]
    },
    "win": {
      "target": "zip",
      "extraResources": [
        "./res/icon.ico",
        "./res/pepflashplayer.dll"
      ]
    },
    "linux": {
      "target": "zip",
      "extraResources": [
        "./res/icon.png",
        "./res/libpepflashplayer.so"
      ]
    }
  },
  "dependencies": {
    "electron-context-menu": "^3.6.1"
  }
}
